## 17
select ARTNUM,ARTNOM,ARTPOIDS
from ARTICLE
where ARTPOIDS > 200;

## 18
select ARTNUM,ARTNOM,ARTPOIDS
from ARTICLE
where ARTPV >= 2*ARTPA;

## 19
select *
from ARTICLE
where ARTCOUL = "ROUGE" and ARTPOIDS > 200;

## 20
select *
from ARTICLE
where ARTCOUL != "ROUGE" and ARTPOIDS != 200;

## 21
select *
from ARTICLE
where ARTPA between 100 and 150;

## 22
select *
from ARTICLE
where ARTCOUL is null;

## 23
select *
from ARTICLE
where ARTNOM like "C%";

## 24
select *
from ARTICLE
where ARTNOM like "C____";

## 25
select ARTNOM from ARTICLE where (ARTPV - ARTPA) > 1;

## 26
select (ARTPV - ARTPA) > 1 as MARGEB, ARTNOM from ARTICLE;