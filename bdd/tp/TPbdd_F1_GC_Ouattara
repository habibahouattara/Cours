## 2
create table PERSONNE (
CL_NUM int(11),
CL_NOM varchar(255),
CL_PRENOM varchar(255),
CL_PAYS varchar(255)
) engine=InnoDB;

## 3
rename table PERSONNE to CLIENT;

## 4
alter table CLIENT add primary key (CL_NUM);


## 5
insert into CLIENT (CL_NUM, CL_NOM, CL_PRENOM, CL_PAYS) values
(1, "Dupond", "Jean", "France");

insert into CLIENT(CL_NUM, CL_NOM, CL_PRENOM) values
(2, "Gary", "Jacques");

insert into CLIENT values (3, "Philippe", "Giles", null);

## 6
select * from CLIENT;

## 7
update CLIENT set CL_PAYS = "France" where CL_PAYS is null;

## 8
insert into CLIENT (CL_NUM,CL_NOM,CL_PRENOM,CL_PAYS) values
(4,"Durand",null,"France"),
(5,"Muller","Loic",null),
(6,"Fournier",null,null);

update CLIENT set CL_NOM = "Dupond" where CL_PAYS is null;

## 9
alter table CLIENT add column CL_VILLE varchar(255);

update CLIENT set CL_VILLE = "Rouen" where CL_PAYS = "France";

## 10
delete from CLIENT where CL_NOM = "Dupond";

## 11
alter table CLIENT alter CL_PAYS set default "France";

## 12
alter table CLIENT modify CL_NOM varchar(255) not null;

## 13
alter table CLIENT change CL_NUM CLNUM int;
alter table CLIENT change CL_NOM CLNOM varchar(255) not null;
alter table CLIENT change CL_PRENOM CLPRENOM varchar(255);
alter table CLIENT change CL_PAYS CLPAYS varchar(255);
alter table CLIENT alter CLPAYS set default "France";
alter table CLIENT change CL_VILLE CLVILLE varchar(255);

## 14
create table FOURNISSEUR (
FRSNUM int(11) primary key,
FRSNOM varchar(255)
) engine=InnoDB;

insert into FOURNISSEUR values (1, "Giles"), (2, "Philipes");

## 15
create table ARTICLE (
ARTNUM int(11) primary key,
ARTNOM varchar(255),
ARTPOIDS int(11),
ARTCOUL varchar(255),
ARTPA int(11),
ARTPV int(11),
ARTFRS int(11)
) engine = InnoDB;

